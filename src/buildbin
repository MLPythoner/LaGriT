# build new lagrit src with util lib

# OSTYPE = Linux
rm *.o 
rm machine.h
make COPT=-g lib
/opt/absoft10.0/bin/f77 -O -f -m32 -c -o lagrit_main.o lagrit_main.f
/opt/absoft10.0/bin/f90 -O -m32 -Dlin -o lagrit_lin_o lagrit_main.o lagrit_lin_o.a /home/tam/src/lg_util/lib/util_lin_o.a -lm -lU77 -static

# OSTYPE = maci
/Applications/Absoft10.2/bin/f77 -O -f -m32 -c -o lagrit_main.o lagrit_main.f
/Applications/Absoft10.2/bin/f90 -O -m32 -o lagrit_maci_o lagrit_main.o lagrit_maci_o.a /home/tam/src/lg_util/lib/util_maci_o.a -lU77 -s

# OSTYPE = Linux gfortran 64 bit
rm *.o 
rm machine.h
cp lagrit_lin64.h lagrit_lin.h
make MOPT=64 COPT=-g lib
gfortran  -g -fcray-pointer -fdefault-integer-8  -fno-sign-zero -Dlinx64 -c -o lagrit_main.o lagrit_main.f
gfortran  -g -fcray-pointer -fdefault-integer-8  -fno-sign-zero -Dlinx64 -c -o lagrit_fdate.o lagrit_fdate.f
gfortran -g -static-libgfortran -fcray-pointer -fdefault-integer-8  -fno-sign-zero -Dlinx64 -o lagrit_lin64_g_gfort4.5 lagrit_main.o lagrit_fdate.o lagrit_lin64_g_gfort4.5.a /home/tam/src/lg_util/lib/util_lin64_g_gfort4.5.a -lm 


# OSTYPE = Linux gfortran 32bit
rm *.o 
rm machine.h
cp lagrit_lin32.h lagrit_lin.h
make COPT=-g lib
gfortran  -g -fcray-pointer -m32 -c -o lagrit_main.o lagrit_main.f
gfortran  -g -fcray-pointer -m32 -c -o lagrit_fdate.o lagrit_fdate.f
gfortran -g -static-libgfortran -fcray-pointer -m32 -Dlin -o lagrit_lin_g_gfort4.5 lagrit_main.o lagrit_fdate.o lagrit_lin_g_gfort4.5.a /home/tam/src/lg_util/lib/util_lin_g_gfort4.5.a -lm 

